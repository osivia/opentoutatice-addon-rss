<?xml version="1.0" encoding="UTF-8"?>

<component name="org.osivia.opentoutatice.addon.rss.types">

    <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
        <schema name="rss" prefix="rss" src="schemas/rss.xsd" />
        <schema name="conRss" prefix="conrss" src="schemas/conteneurRss.xsd" />
    </extension>
    
    
    <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">
		<doctype name="rss">
			<facet name="SpaceContent" />
			<schema name="rss" />
		</doctype>

		<doctype name="Conteneur" >
			<facet name="SpaceContent" />
			<schema name="conteneurRss" />
		</doctype>
    </extension> 
    
</component>
