<?xml version="1.0" encoding="UTF-8"?>

<component name="org.osivia.opentoutatice.addon.rss.types">

    <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
        <schema name="ottc-rss-item" prefix="rssi" src="schemas/ottc-rss-item.xsd" />
        <schema name="ottc-rss-containeur" prefix="rssc" src="schemas/ottc-rss-containeur.xsd" />
    </extension>
    
    
    <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">
		<doctype name="RssItem" extends="Document">
			<schema name="common" />
			<schema name="dublincore" />
			<schema name="ottc-rss-item" />
		</doctype>

		<doctype name="RssContainer"  >
			<facet name="Folderish" />
			<schema name="common" />
			<schema name="dublincore" />
			<schema name="ottc-rss-containeur" />
		</doctype>
	</extension>
	
	
	<extension target="org.nuxeo.ecm.core.schema.TypeService" point="type">
		<type id="Workspace">
			<subtypes>
				<type>RssContainer</type>	
			</subtypes>
		</type>
		
		<type id="RssContainer">
			<subtypes>
				<type>RssItem</type>	
			</subtypes>
		</type>
    </extension> 
    
</component>
